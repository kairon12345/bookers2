<div>
  <h2>User info</h2>

  <%=attachment_image_tag @user,:profile_image ,fillback: "no_image.jpg"%>

  <table>
    <tbody>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
    </tbody>
  </table>

<% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>

<div>
<h1>New Book</h1>

<%= form_with model:@book ,local:true do |f| %>

  <h4>Title</h4>
  <%=f.text_field :title %>

  <h4>Opinion</h4>
  <%=f.text_field :body %>

  <%=f.submit'Create Book'%>

<%end%>
</div>

<div>
<%= @books.each do |books| %>
    <table>
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%=image_tag ('sample-author1.jpg')%></td>
          <td><%=books.title%></td>
          <td><%=books.body%></td>
        </tr>
      </tbody>
    </table>
<%end%>
</div>