  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% books.each do |books| %>
      <tr>
          <td><%= link_to user_path(books.user) do %>
            <%=attachment_image_tag books.user,:profile_image,:fill,100,100, fallback: "no_image.jpg" %>
              <%end%>
          </td>
          <td><%= link_to book_path(books) do %>
                <%=books.title%>
              <%end%>
          </td>
          <td><%=books.body%></td>
      </tr>
      <%end%>
    </tbody>

  </table>


