<div>
  <h2>User info</h2>

  <%=attachment_image_tag user,:profile_image ,fillback: "no_image.jpg"%>

  <table>
    <tbody>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>

<% if user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(user) %></p>
  <% end %>
</div>